<launch>

    <!-- Useful ressource: https://quaternions.online/ -->

    <!-- Trafo tag>world -->
    <arg name="tag_id" default="0.20" doc="ID of tracked tag" />
    <arg name="tag_x" default="-0.2575" doc="Position of tag in imap frame [m]."/>
    <arg name="tag_y" default="0.10" doc="Position of tag in imap frame [m]."/>
    <arg name="tag_z" default="0.465" doc="Position of tag in imap frame [m]."/>
    <arg name="tag_qx" default="-0.5" doc="Orientation of tag in imap frame."/>
    <arg name="tag_qy" default="-0.5" doc="Orientation of tag in imap frame."/>
    <arg name="tag_qz" default="0.5" doc="Orientation of tag in imap frame."/>
    <arg name="tag_qw" default="0.5" doc="Orientation of tag in imap frame."/>

    <!-- Trafo vehicle>cam -->
    <!-- with alpha = tilting angle of camera = 15Â° -->
    <arg name="cam_frame" default="camera" doc="tf frame id for camera frame" />
    <arg name="cam_x" default="0.045" doc="Position of camera in vehicle's frame [m]."/>
    <arg name="cam_y" default="0.055" doc="Position of camera in vehicle's frame [m]."/>
    <arg name="cam_z" default="0.075" doc="Position of camera in vehicle's frame [m]."/>
    <arg name="cam_qx" default="-0.4458064" doc="Orientation of camera in vehicle's frame."/>
    <arg name="cam_qy" default="0.4458064" doc="Orientation of camera in vehicle's frame."/>
    <arg name="cam_qz" default="-0.6966699" doc="Orientation of camera in vehicle's frame."/>
    <arg name="cam_qw" default="-0.3422928" doc="Orientation of camera in vehicle's frame."/>

    <arg name="vehicle_frame" default="car" doc="tf frame id for vehicle frame"/>

    <arg name="world_frame" default="world" doc="tf frame id for world frame"/>

    <node pkg="tf" type="static_transform_publisher" name="tf_tag_world" 
        args="$(arg tag_x) $(arg tag_y) $(arg tag_z)
            $(arg tag_qx) $(arg tag_qy) $(arg tag_qz) $(arg tag_qw)
            Tag$(arg tag_id) $(arg world_frame) 100" />

    <node pkg="tf" type="static_transform_publisher" name="tf_cam_vehicle" 
        args="$(arg cam_x) $(arg cam_y) $(arg cam_z)
            $(arg cam_qx) $(arg cam_qy) $(arg cam_qz) $(arg cam_qw)
            $(arg vehicle_frame) $(arg cam_frame) 100" />

</launch>